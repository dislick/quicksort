{
  "name": "quicksort",
  "version": "1.0.0",
  "description": "Educational Quicksort Implementation",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start:dev": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "author": "Patrick Muff",
  "license": "ISC",
  "devDependencies": {
    "@types/benchmark": "^1.0.31",
    "@types/jest": "^24.0.11",
    "@types/microtime": "^2.1.0",
    "jest": "^24.7.1",
    "nodemon": "^1.18.10",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "benchmark": "^2.1.4",
    "microtime": "^3.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts",
      "src/generated/**/*"
    ],
    "exec": "ts-node src/index.ts"
  }
}
